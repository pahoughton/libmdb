# Include standard MakeConfig configuration for GNU make required
#

include Make/make.cfg.2.2

BETA_DIR	= /rating/prod/bin
PROD_DIR	= /rating/prod/bin
MAN_DIR		=


PROGRAM = NpaNxxDelta 

PROTO_H	= _NpaNxxDelta_Proto.h

# **** S O U R C E   F I L E S ****

C_SOURCES	=			\

CXX_SOURCES	=			\
	main.C                          \
	NpaNxxDeltaSybase.C		\
	CARNpaNxxDeltaSybase.C		\
	AppParam.C			\
	DeltaNpaNxx.C


# 
# =USE_CURRENT_MAKEFILE=
# When you re-gen a make file, every thing between 
# these tags will be kept int the new makefile
# if you want it re-gen'd, just delete the tags
#

# *****  D E F I N E S  *****
#
# see MakeConfig(1) for portable library defines
#

DEFINES		= 

# *****  I N C L U D E S *****
#
# see MakeConfig(1) for portable library includes
#


SRCINCDIR	= -I.
PRJINCDIR	= -I $(SYBASE)/include 		\
		  -I /rating/dev/include

INCDIRS		= $(SRCINCDIR)	\
		  $(PRJINCDIR)


# **** C O M P I L E / C P P ****

CPPOTHER 	= 
CCDEBUG		= -Q -O2
CCOTHER		=

INSTALL_BIN_FLAGS   = -m 775

# ***** L I B R A R I E S *****
#
# see MakeConfig(1) for portable libraries
#

LDLIBS		= -L . \
	                -L /rating/dev/lib	\
		  -L $(SYBASE)/lib	\
		  -lRating 	\
		  -lIX		\
		  -lConn	\
		  -lStlUtils 	\
		  -lCommon 	\
                  -lmmalloc  	\
		  -lSyboc	\
		  -lsybdb	\
		  -lDelta	\
		  -lLog



# ***** D E P E N D A N C I E S *****

# =USE_CURRENT_MAKEFILE=

all: $(PROGRAM)

$(PROGRAM): $(OBJECTS)
	$(LDXX) -o $@ $(OBJECTS) $(LDFLAGS) 
	strip $@

install:
	mkdirhier $(BETA_DIR/old)
	-( cd $(BETA_DIR)/old; rm -f $(PROGRAM); cd ..; mv $(PROGRAM) old )
	$(INSTALL) $(INSTALL_BIN_FLAGS) $(PROGRAM) $(BETA_DIR)
	echo 'Beta Install Complete!'

install_production:
	mkdirhier $(PROD_DIR/old)
	-( cd $(PROD_DIR)/old; rm -f $(PROGRAM); cd ..; mv $(PROGRAM) old )
	$(INSTALL) $(INSTALL_BIN_FLAGS) $(PROGRAM) $(PROD_DIR)
	echo 'Production Install Complete!'

clean:
	rm -f $(PROGRAM) $(OBJECTS)

realclean:
	rm -f $(PROGRAM) $(OBJECTS) .depend.prog TAGS $(PROTO_H)

test:	all

depend: depend.prog

proto: $(PROTO_H)

$(PROTO_H): $(C_SOURCES)
	$(MKPROTO) $(CPPFLAGS) $(C_SOURCES) >$@

tags: 
	etags -t *.h *.c *.hh *.C

#
# include dependancies generated by 'make depend'
#
include .depend.prog


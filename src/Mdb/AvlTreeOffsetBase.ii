inline
AvlTreeOffsetBase::Node *
AvlTreeOffsetBase::node( Loc root ) const
{
  return( (Node *)( getBase() + root ) );
}


inline
void
AvlTreeOffsetBase::initNode( Loc root )
{
  node( root )->subTree[ LEFT ]     = 0;
  node( root )->subTree[ RIGHT ]    = 0;
  node( root )->bal 	    	    = 0;
}

